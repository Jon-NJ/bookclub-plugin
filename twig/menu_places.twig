<div class='bc_help'>
 <div id='htmlhelp'></div>
 <button id="close_help">X</button>
</div>
<div class="bc_places bc_{{ mode }}">
 <div class="bc_main">
  <h1>{{ title }}</h1>
  <input type="hidden" id="nonce" name="nonce" value="{{ nonce }}" />
  <input type="hidden" id="referer" name="referer" value="{{ referer }}" />
  <input type="hidden" id="mode" name="mode" value="{{ mode }}" />
  <input type="hidden" id="delete_text" name="delete_text" value="Do you really want to delete?" />
  <section class='bc_toolbar'>
   <section class='bc_form_lines'>
    <div class='bc_form_label'>Tools:</div>
    <div class='bc_form_data'>
     <button id='button_help'>
      <img src='{{ images }}help.png'/> Help
     </button>
     {% if "edit" == mode %}
      <button id='button_add' disabled>
       <img src='{{ images }}plus.png'/> Add
      </button>
      <button id='button_reset'>
       <img src='{{ images }}reset.png'/> Restart
      </button>
     {% else %}
      <button id='button_add'>
       <img src='{{ images }}plus.png'/> Add
      </button>
      <button id='button_search'>
       <img src='{{ images }}search.png'/> Search
      </button>
     {% endif %}
     {% if "edit" == mode %}
      <button id='button_save'>
       <img src='{{ images }}save.png'/> Save
      </button>
      <button id='button_delete'>
       <img src='{{ images }}drop.png'/> Delete
      </button>
     {% else %}
      <button id='button_save' disabled>
       <img src='{{ images }}save.png'/> Save
      </button>
      <button id='button_delete' disabled>
       <img src='{{ images }}drop.png'/> Delete
      </button>
     {% endif %}
    </div>
   </section>
  </section>
  <div class='bc_notice_area'>
   <div id='bc_notice' class='bc_notice'>
    <p id='bc_message' class='bc_message'>***</p>
   </div>
  </div>
  <section class='bc_form_lines'>
   <div class='bc_form_label'>Place ID:</div>
   <div class='bc_form_data'>
    {% if "edit" == mode %}
     <input type='text' size='3' id='place_id' name='place_id' value='{{ place_id }}' readonly/>
    {% else %}
     <input type='text' size='3' id='place_id' name='place_id' value='{{ place_id }}'/>
    {% endif %}
   </div>
   <div class='bc_form_label'>Place:</div>
   <div class='bc_form_data'>
    <input type='text' size='50' id='place' name='place' value='{{ place }}'/><br/>
   </div>
   <div class='bc_form_label'>Address:</div>
   <div class='bc_form_data'>
    <input type='text' size='50' id='address' name='address' value='{{ address }}'/><br/>
   </div>
   <div class='bc_form_label'>Map:</div>
   <div class='bc_form_data'>
    <input type='text' size='50' id='map' name='map' value='{{ map }}'/><br/>
   </div>
   <div class='bc_form_label'>Directions:</div>
   <div class='bc_form_data'>
    {% if "edit" == mode %}
     <textarea rows='15' cols='100' id='directions' name='directions'>{{ directions }}</textarea>
    {% else %}
     <textarea rows='2' cols='49' id='directions' name='directions'>{{ directions }}</textarea>
    {% endif %}
   </div>
  </section>
 </div>
 {% if "search" == mode %}
  <div class='bc_extra'>
   {% if not found|length %}
    <hr/>
    <div class='bc_noresults'>Nothing matches.</div>
   {% else %}
    <section class='bc_places_results'>
     <div class='bc_head bc_places_id'>ID</div>
     <div class='bc_head bc_places_place'>Place</div>
     <div class='bc_head bc_places_address'>Address</div>
     {% for find in found %}
      <div class='bc_line bc_places_id' id='id_{{ find.place_id }}'>{{ find.place_id }}</div>
      <div class='bc_line bc_places_place' id='place_{{ find.place_id }}'>{{ find.place }}</div>
      <div class='bc_line bc_places_address' id='adr_{{ find.place_id }}'>{{ find.address }}</div>
     {% endfor %}
    </section>
   {% endif %}
  </div>
 {% endif %}
</div>
